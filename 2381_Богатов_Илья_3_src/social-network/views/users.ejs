<div class="toolbar pt-2">
    <h2 class="title"><%= heading %></h2>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" href="add"><i class="fa-solid fa-user-plus"></i> Добавить</a>
    </div>
</div>
<div class="table-responsive mt-2">
<table class="table table-striped table-hover align-middle" id="usersTable">
    <thead>
    <tr class="text-center">
        <th scope="col" class="text-start">Пользователь</th>
        <th scope="col">Дата рождения</th>
        <th scope="col">Подписчики</th>
        <th scope="col">Подписки</th>
        <th scope="col">Роль</th>
        <th scope="col">Статус</th>
        <th scope="col" class="text-end pe-3">Действия</th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach((user) => { %>
        <tr class="text-center" data-id="<%= user._id %>">
            <th scope="row" class="text-start d-flex flex-row align-items-center gap-2">
                <% if (user.avatar !== 'no-avatar') { %>
                    <picture>
                        <img src="/<%= user.avatar %>" alt="Аватар пользователя" class="avatar-sm">
                    </picture>
                <% } else { %>
                    <div class="no-avatar avatar-sm">
                        <i class="fa-solid fa-user" aria-hidden="true"></i>
                    </div>
                <% } %>
                <%= `${user.firstName} ${user.lastName}`%></th>
            <td class="text-center"><%= new Date(user.birthday).toLocaleDateString('en-GB') %></td>
            <td><a href="<%= user._id %>/followers/"><%= user.followers ? user.followers.length : 0 %></a></td>
            <td><a href="<%= user._id %>/following/"><%= user.following ? user.following.length : 0 %></a></td>
            <td>
                <span class="badge rounded-pill <%= (user.role||'user').toLowerCase()==='admin' ? 'bg-warning text-dark' : 'bg-info' %>">
                    <%= user.role %>
                </span>
            </td>
            <td>
                <span class="badge rounded-pill <%= (user.status||'').toLowerCase()==='active' ? 'bg-success' : 'bg-secondary' %>">
                    <%= user.status %>
                </span>
            </td>
            <td class="text-end">
                <div class="d-inline-flex gap-2">
                    <a class="btn btn-sm btn-secondary no-row-nav" href="/users/<%= user._id %>"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn btn-sm btn-primary no-row-nav" href="/users/<%= user._id %>/edit"><i class="fa-solid fa-pen"></i></a>
                    <button type="button" class="btn btn-sm btn-danger no-row-nav btn-delete" data-id="<%= user._id %>"><i class="fa-solid fa-trash"></i></button>
                </div>
            </td>
        </tr>
    <% }); %>
    </tbody>
 </table>
</div>
<%- include('partials/pagination', {totalPages, currentPage}) %>

<div id="confirmDialog" title="Удаление пользователя" style="display:none;">
  <p>Вы действительно хотите удалить пользователя?</p>
  <p class="text-warning"><small>Действие необратимо.</small></p>
  <input type="hidden" id="deleteUserId" value="">
</div>
